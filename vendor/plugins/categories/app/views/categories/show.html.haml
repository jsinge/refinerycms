- content_for :body_content_title do
  = @category.title


- content_for :body_content_left do
  
  - if @category.title
    .title
      %h3= t('category.title')
      = @category.title
  
  - if @category.description
    .description
      %h3= t('category.description')
      = @category.description
  
  - if @category.parent_id
    .parent
      %h3= t('category.parent')
      = @category.parent_id
  
  - if @category.shop_id
    .shop
      %h3= t('category.shop')
      = @category.shop_id
  
  - if @category.image
    .image
      %h3= t('category.image')
      = image_fu @category.image, :large
  


- content_for :body_content_right do
  %h2= t('.other')
  %ul#categories
    - @categories.each do |category|
      %li
        = link_to category.title, category_url(category)

= render :partial => "/shared/content_page"
